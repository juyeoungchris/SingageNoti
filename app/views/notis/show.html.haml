#noti_show.row
	.col-md-6.col-md-offset-3
		.panel.panel-default
			.panel-heading.pin_image
				= image_tag @noti.image.url(:medium) , style: 'height:auto;width:100%;'
			.panel-body
				%h1= @noti.title
				= sanitize @noti.description
				= "http://13.209.193.243:3000/notis/" + @noti.id.to_s
				- if user_signed_in?
					%p= @noti.timeout


			.panel-footer
				.row
					.col-md-6
						%p.user
						Sumitted by
						= @noti.user.email
					.col-md-6
						.btn-group.pull-right
							- if user_signed_in?
								= link_to "Back", root_path
								= link_to "Edit", edit_noti_path
								= link_to "Delete", noti_path, method: :delete, date: { confirm: "Are you sure?"}
								= link_to "Send", resendnoti_write_path(@noti,:id => @noti.id)
							- else
								= link_to "Back", root_path


